// Changing IOBJ[rcp] into RCP
if ( ^IOBJ[rcp:+](#1,#2[proper]) | ^$1[rcp:+](#1,#2[c_person]) )
	RCP[rcp=~](#1,#2) 


// CH - changing VMOD[goal] to RCP when the modifier is human
if ( ^VMOD[goal:+](#1,#2[c_person]) | ^VMOD[goal:+](#1,#2[proper:+]) )
	RCP[goal=~](#1,#2)


// If we have two proper nouns as rcp
// e.g. They sent a present to Abby to England.
if ( RCP(#1,#2) & ( ^RCP(#1,#3) | ^LOC(#1,#3) | ^VMOD[post](#1,#3) ) & PERSON(#2) & ~PERSON(#3) )
	GOAL(#1,#3) 


