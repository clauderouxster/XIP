<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <name>InfomagicTypeSystem-alternate-coref-representation</name>
  <description>Alternate version of Infomagic type system, in which an entity mentioned multiple times in the text is represented by a unique Entity feature structure, which is pointed to by multiple EntityMention annotations.</description>
  <version>1.0.0</version>
  <vendor>Infomagic</vendor>
  <types>
    <typeDescription>
      <name>infomagic.types.EntityMention</name>
      <description>Base type for named entity mentions.  A mention is
      a single occurrence in a text.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>source</name>
          <description>Source of annotation.
            Xerox, Temis, Arisem, IGM...</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>uri</name>
          <description>Reference to an external resource.</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>entity</name>
          <description/>
          <rangeTypeName>infomagic.types.Entity</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.Entity</name>
      <description>Base type for
      entities.  An entity is an individual in the world, not an
      occurrence in a text.</description>
      <supertypeName>uima.cas.TOP</supertypeName>
      <features>
        <featureDescription>
          <name>mentions</name>
          <description/>
          <rangeTypeName>uima.cas.FSArray</rangeTypeName>
          <elementType>infomagic.types.EntityMention</elementType>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.PersonEntity</name>
      <description/>
      <supertypeName>infomagic.types.Entity</supertypeName>
      <features>
        <featureDescription>
          <name>firstname</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>lastname</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>middlename</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>function</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>ethnonym</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>title</name>
          <description>monsieur, madame, etc</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.LocationEntity</name>
      <description/>
      <supertypeName>infomagic.types.Entity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.OrganisationEntity</name>
      <description/>
      <supertypeName>infomagic.types.Entity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.EventEntity</name>
      <description/>
      <supertypeName>infomagic.types.Entity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.MeansToAchieveEntity</name>
      <description/>
      <supertypeName>infomagic.types.Entity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.WorkEntity</name>
      <description/>
      <supertypeName>infomagic.types.Entity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.DateAndTimeEntity</name>
      <description/>
      <supertypeName>infomagic.types.Entity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.NumericalExpressionEntity</name>
      <description/>
      <supertypeName>infomagic.types.Entity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.ContactInformationEntity</name>
      <description/>
      <supertypeName>infomagic.types.Entity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.CityEntity</name>
      <description/>
      <supertypeName>infomagic.types.LocationEntity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.CountryEntity</name>
      <description/>
      <supertypeName>infomagic.types.LocationEntity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.RegionEntity</name>
      <description/>
      <supertypeName>infomagic.types.LocationEntity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.MicrotoponymEntity</name>
      <description/>
      <supertypeName>infomagic.types.LocationEntity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.BuildingEntity</name>
      <description/>
