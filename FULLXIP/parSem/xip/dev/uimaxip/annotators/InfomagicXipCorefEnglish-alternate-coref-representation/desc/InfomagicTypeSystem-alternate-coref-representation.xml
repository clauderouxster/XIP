    </typeDescription>
    <typeDescription>
      <name>infomagic.types.DistrictEntity</name>
      <description/>
      <supertypeName>infomagic.types.LocationEntity</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>infomagic.types.CompanyEntity</name>
      <description/>
      <supertypeName>infomagic.types.OrganisationEntity</supertypeName>
    </typeDescription>
  </types>
</typeSystemDescription>
