Vocabulary:



// adding feature season:+ to seasons
summer : noun[period:+] += [season=+].
autumn : noun[period:+] += [season=+].
winter : noun[period:+] += [season=+].
spring : noun[period:+] += [season=+].


tomorrow = noun[t_relat:+].


// marking adjectives that express a temporal frequency

weekly += [t_freq:+, period:+].
biweekly += [t_freq:+, period:+].
fortnightly += [t_freq:+,period:+].
bimonthly += [t_freq:+,period:+].
monthly += [t_freq:+,period:+].
annual += [t_freq:+,period:+].
yearly += [t_freq:+,period:+].
biannual += [t_freq:+,period:+].
quarterly += [t_freq:+,period:+].


recent += [period:+,t_relat:+].
ancient += [period:+,t_relat:+].
antique += [period:+,t_relat:+].
former += [period:+,t_relat:+].
old += [period:+,t_relat:+].
new += [period:+,t_relat:+].















