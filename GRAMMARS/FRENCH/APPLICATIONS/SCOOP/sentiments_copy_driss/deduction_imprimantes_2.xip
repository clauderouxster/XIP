Déduction:

//----------------------------------------------------------------------------------------------------
// annulation de sentiment
// ... je ne sais pas ...
// PB: pas de lien entre SUBJ et SENTIMENT, pourrait avoir des effets de bord non-souhaités...
// p.e. si la phrase est très longue, sans point, toutes les relations SENTIMENT seront effacés
// Je souhaite acheter une imprimante EPSON et je ne sais pas quelle est la meilleure côté impression, rapidité, qualité, bruyante ou pas!!!
if ( ^SENTIMENT(#1, #2) & SUBJ(#3[lemme:savoir, p1:+], #4) & ( VMOD(#3, #5[psneg:+]) | NEGAT(#3) ) )
~.

// le mode meilleure qualité, réglage meilleure impression
| NP{?*, noun#3[last:+, lemme:fonction]}; NP{?*, noun#3[last:+, lemme:démarrage]};
 NP{?*, noun#3[last:+, lemme:mode]}; NP{?*, noun#3[last:+, lemme:rapport]};
 NP{?*, noun#3[last:+, lemme:recherche]}; NP{?*, noun#3[last:+, lemme:réglage]},
 NP{?*, #2[last:+]} |
if ( ^SENTIMENT(#1, #2) )
~.

// le mode rapide, la fonction cool and quiet
// guide du démarrage rapide ?
| NP{?*, noun#1[last:+, lemme:fonction]};			// NP{?*, noun#1[last:+, lemme:démarrage]};
 NP{?*, noun#1[last:+, lemme:mode]}; NP{?*, noun#1[last:+, lemme:rapport]};
 NP{?*, noun#1[last:+, lemme:recherche]}; NP{?*, noun#1[last:+, lemme:réglage]};
 PP{?*, NP{?*, noun#1[last:+, lemme:fonction]}};			// PP{?*, NP{?*, noun#1[last:+, lemme:démarrage]}};
 PP{?*, NP{?*, noun#1[last:+, lemme:mode]}}; PP{?*, NP{?*, noun#1[last:+, lemme:rapport]}};
 PP{?*, NP{?*, noun#1[last:+, lemme:recherche]}}; PP{?*, NP{?*, noun#1[last:+, lemme:réglage]}},
 AP{?*, #2[last:+, sents:+]} |
if ( ^SENTIMENT(#2, #1) )
~.



//----------------------------------------------------------------------------------------------------
// domaines
// ajout d'un 3e argument pour faire pareil que "nucléaire"
// impression
| noun#1[lemme:impression]; noun#1[surface:impresion]; verb#1[lemme:imprimer]; noun#1[lemme:fax]; verb#1[lemme:faxer];
 noun#1[surface:scan]; noun#1[surface:scann]; noun#1[surface:Scan]; verb#1[lemme:scanner];
 noun#1[lemme:numérisation]; verb#1[lemme:numériser];
 noun#1[lemme:photocopie]; noun#1[lemme:copie]; verb#1[lemme:photocopier]; verb#1[lemme:copier] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=IMPRESSION]).

// hardware
| noun#1[lemme:imprimante]; adj#1[surface:imprimante]; adj#1[surface:Imprimante];
 noun#1[surface:imprimente]; noun#1[surface:imprimentes]; noun#1[lemme:cartouche];
 noun#1[lemme:scanner]; noun#1[lemme:numériseur]; noun#1[lemme:photocopieur]; noun#1[lemme:copieur];
 noun#1[lemme:écran]; noun#1[lemme:ordinateur]; noun#1[lemme:"lecteur de cartes"];
 noun#1[lemme:routeur] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=HARDWARE]).

// software
| noun#1[lemme:driver]; noun#1[lemme:driveur]; noun#1[lemme:pilote]; noun#1[lemme:logiciel];
 noun#1[lemme:software] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=SOFTWARE]).

// vitesse
| noun#1[lemme:vitesse]; noun#1[lemme:rapidité]; adj#1[lemme:rapide]; adv#1[lemme:vite];
 adj#1[lemme:lent]; noun#1[lemme:lenteur]; adv#1[lemme:rapidement] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=VITESSE]).

// qualité
| noun#1[lemme:qualité]; adj#1[lemme:qualitatif]; adj#1[lemme:nickel] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=QUALITE]).

// fonction
| noun#1[lemme:fonctionnalité]; noun#1[lemme:fonction]; noun#1[lemme:performance]; noun#1[lemme:wifi]; noun#1[lemme:Wifi] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=FONCTION]).

// graphisme
| noun#1[lemme:graphisme]; noun#1[lemme:résolution]; noun#1[lemme:couleur]; noun#1[lemme:intensité] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=GRAPHISME]).

// image
| noun#1[lemme:photo]; noun#1[lemme:photographie]; noun#1[lemme:image]; noun#1[lemme:dessin]; noun#1[lemme:graphique] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=IMAGE]).

// système d'exploitation
| noun#1[surface:Windows]; noun#1[surface:windows]; noun#1[surface:Linux]; noun#1[surface:linux];
 noun#1[surface:Mac]; noun#1[surface:mac] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=SYSTEME]).

// jet d'encre
| noun#1[lemme:jet] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=JET]).

// laser
| noun#1[lemme:laser]; noun#1[surface:lazer]; noun#1[lemme:LaserJet] |
DOMAINE[domaine=+](#1, #1, ##EMPTY[lemme=LASER]).



//----------------------------------------------------------------------------------------------------
// noms de produits
// se basant sur la chaine de caractère traitée dans localgram_imprimantes.xip
// {Canon PS 5 | canon§ps5}
// 1er argument: nom normalisé; 2e argument: chaine telle que dans le texte
| #1[produit:+]{?, noun#2[produit_surf:+], ?, noun#3[produit_norm:+], ?} |
PRODUIT(#3, #2).

