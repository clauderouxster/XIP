Déduction:

//----------------------------------------------------------------------------------------------------



//                 sentiment sur le prix, le coût


//====================================================================================================
//====================================================================================================

//le prix est bas.

if( SUBJ(#1, #3[descriptif : +, prix : +]) & (OBJ(#1[lemme : être], #2[ prix :+]) | VMOD(#1[lemme : être], #2[ prix :+]))
)
SENTIMENT[positive :+](##EXPERIENCER, #2, #3, ##SPEAKER).



//le prix est haut.

if( SUBJ(#1, #3[descriptif : +, prix : +]) & OBJ(#1[lemme : être], #2[ prix :-]) 
)
SENTIMENT[negative :+](##EXPERIENCER, #2, #3, ##SPEAKER).

//====================================================================================================
//====================================================================================================




//====================================================================================================
//====================================================================================================

//le prix est élevé.


if(SUBJ[passive : +](#1[prix:-], #3[descriptif : +, prix : +]) 
)
SENTIMENT[negative :+](##EXPERIENCER, #1, #3, ##SPEAKER).



if(SUBJ[passive : +](#1[prix:+], #3[descriptif : +, prix : +]) 
 )
SENTIMENT[positive :+](##EXPERIENCER, #1, #3, ##SPEAKER).

//====================================================================================================
//====================================================================================================






//====================================================================================================
//====================================================================================================

//les tomates sont cher.


if(	(OBJ[spred : +](#1[lemme : être], #2[prix:-, descriptif : ~]) | VMOD(#1[lemme : être], #2[prix:-, descriptif : ~])) & SUBJ(#1, #3[humain : ~, dem : ~, rel : ~, nom : ~, descriptif : ~]) 
)
SENTIMENT[appreciation = +, negative = +](##EXPERIENCER, #2, #3, ##SPEAKER).


if(	(OBJ[spred : +](#1[lemme : être], #2[prix:+, descriptif : ~])| VMOD(#1[lemme : être], #2[prix:-, descriptif : ~])) & SUBJ(#1, #3[humain : ~, dem : ~, rel : ~, nom : ~,  descriptif : ~]) 
)
SENTIMENT[appreciation = +, positive :+](##EXPERIENCER, #2, #3, ##SPEAKER).

//====================================================================================================
//====================================================================================================



//====================================================================================================
//====================================================================================================

//il vaut cher. il vaut une fortune. 


if(	(OBJ(#1[descriptif : +, prix : +], #2[prix:-]) | VMOD(#1[descriptif : +, prix : +], #2[prix:-]) )
	& SUBJ(#1, #3[humain : ~]) 
)
SENTIMENT[appreciation = +, negative :+](##EXPERIENCER, #1, #3, ##SPEAKER).



if(	(OBJ(#1[descriptif : +, prix : +], #2[prix:+]) | VMOD(#1[descriptif : +, prix : +], #2[prix:+]) )
 & SUBJ(#1, #3[humain : ~]) 
)
SENTIMENT[appreciation = +, positive :+](##EXPERIENCER, #1, #3, ##SPEAKER).

//====================================================================================================
//====================================================================================================










//sentiment sur la qualité, la précision


//====================================================================================================
//====================================================================================================

//la qualité de la montre est haute.

if( SUBJ(#1, #3[descriptif : +, qualité : +]) & OBJ(#1[lemme : être], #2[ qualité :+]) 
 )
SENTIMENT[appreciation = +, positive :+](##EXPERIENCER, #2, #3, ##SPEAKER).

//la précision de la montre est basse.

if( SUBJ(#1, #3[descriptif : +,  qualité: +]) & OBJ(#1[lemme : être], #2[ qualité :-])   
)
SENTIMENT[appreciation = +, negative :+](##EXPERIENCER, #2, #3, ##SPEAKER).


//====================================================================================================
//====================================================================================================



//====================================================================================================
//====================================================================================================

//La qualité de la montre est élevé.

if(SUBJ[passive : +](#1[qualité:+], #3[descriptif : +,  qualité: +]) 
)
SENTIMENT[appreciation = +, positive :+](##EXPERIENCER, #1, #3, ##SPEAKER).


if(SUBJ[passive : +](#1[qualité:-], #3[descriptif : +, qualité : +]) 
)
SENTIMENT[appreciation = +, negative :+](##EXPERIENCER, #1, #3, ##SPEAKER).

//====================================================================================================
//====================================================================================================




//====================================================================================================
//====================================================================================================

//la  montre est de haute qualité.

if( NMOD[posit1 : +](#3[ descriptif : +,qualité :+], #2[qualité:+])  
)
SENTIMENT[appreciation = +, positive :+](##EXPERIENCER, #2, #3, ##SPEAKER).


//la  montre est de basse qualité.

if( NMOD[posit1 : +](#3[ descriptif : +,qualité :+], #2[qualité:-])  
)
SENTIMENT[appreciation = +, negative :+](##EXPERIENCER, #2, #3, ##SPEAKER).

