// entreprises des imprimantes
PIXMA : noun += [firme=+].
Brother : noun += [firme=+].
Epson : noun += [firme=+].
canon : noun += [firme=+].
hp :: ? = noun[noun=+, firme=+, proper=+, masc=+, sg=+, lemme=HP].
Lexmark :: ? = noun[noun=+, firme=+, proper=+, masc=+, sg=+, lemme=Lexmark].
lexmark :: ? = noun[noun=+, firme=+, proper=+, masc=+, sg=+, lemme=Lexmark].
LEXMARK :: ? = noun[noun=+, firme=+, proper=+, masc=+, sg=+, lemme=Lexmark].
XEROX :: ? = noun[noun=+, firme=+, proper=+, masc=+, sg=+, lemme = XEROX].
Oki :: ? = noun[noun = +, firme = +, proper = +, masc = +, sg = +, lemme = Oki].
oki :: ? = noun[noun = +, firme = +, proper = +, masc = +, sg = +, lemme = Oki].
OKI :: ? = noun[noun = +, firme = +, proper = +, masc = +, sg = +, lemme = Oki].


EPSON : noun += [firme:+].
Epson : noun += [firme:+].
