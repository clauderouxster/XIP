// lexique_imprimantes.xip
// lexique des sentiments des imprimantes



Vocabulaires:

// sentiments positives

// adjectifs

	acceptable : adj += [sents = +, positive = +].
	
	bruyant : adj += [sents = +, positive = +].

	compacte : adj += [sents = +, positive = +].
	complet : adj += [sents = +, positive = +].
	confortable : adj += [sents = +, positive = +].
	convaincant : adj += [sents = +, positive = +].
 	convivial : adj += [sents = +, positive = +].
	correct : adj += [sents = +, positive = +].
	costaud : adj += [sents = +, positive = +].
	correct : adj += [sents = +, positive = +].
 
 
	dérisoire : adj += [sents = +, positive = +].
	difficile  : adj += [sents = +, negative = +].

	économique : adj += [sents = +, positive = +].
	efficace : adj += [sents = +, positive = +].
	encombrant : adj += [sents = +, negative = +].
	époustouflant : adj += [sents = +, positive = +].
	esthétique : adj += [sents = +, positive = +].

	faible : adj += [sents=+, negative=+].
	facile : adj += [sents = +, positive = +].
	favori : adj += [sents = +, positive = +].
	fiable : adj += [sents = +, positive = +]. 
	fiabilité : adj += [sents = +, positive = +]. 
	fin : adj += [sents = +, positive = +].
	fluide : adj += [sents = +, positive = +].
	fonctionnel : adj += [sents = +, positive = +].


	imbattable : adj += [sents = +, positive = +].
	
	inabouti : adj += [sents = +, negative = +].
	inefficace : adj += [sents = +, negative = +].


	indispensable : adj += [sents = +, positive = +].
	inégalable : adj += [sents = +, positive = +].

	imposant: adj += [sents = +, positive = +].

	intuitif : adj += [sents = +, positive = +].

	lent : adj += [sents = +, negative = +].
	léger : adj += [sents = +, positive = +].
	long : adj += [sents = +, negative = +].
	lourd : adj += [sents = +, negative = +].

	net : adj += [sents = +, positive = +].
	
	performant  : adj += [sents = +, positive = +].
	pratique  : adj += [sents = +, positive = +].
	précis : adj += [sents = +, positive = +].
	propre : adj += [sents = +, positive = +].


	rapide : adj += [sents = +, positive = +].


	silencieux : adj += [sents = +, positive = +].
	simple : adj += [sents = +, positive = +].
	souple : adj += [sents = +, positive = +].


	
	// adverbes

	économiquement : adv += [sents = +, positive = +].
	facilement : adv += [sents = +, positive = +].

	// noms
	économie  : noun += [sents = +, positive = +].

	argent : noun += [ valeur = +].
	temps : noun += [ valeur = +].

	rapidement : adv += [sents = +, positive = +, rapidite = +].

	//verb 
	
	perdre  : verb += [gain = +, negative = +].
	économiser : verb += [gain = +, positive = +].
	gagner : verb += [ gain= +, positive = +].

	//noun

	perte : noun  += [gain = +, negative = +].
	économie : noun += [gain = +, positive = +].
	gain : noun += [ gain= +, positive = +].



	vider : verb + =  [ rapidite = -].



	// noun

	cartouche : noun = [hardware = +].
	imprimante : noun = [hardware = +].

//*********************************** Composant ******************************


//gros : adj[descript : +, negative]



//----------------------------------------------------------------------------------------------------
// faible coût, faible consommation, ...
bruit : noun += [pos-faible=+].
consommation : noun += [pos-faible=+].
coût : noun += [pos-faible=+].
écart : noun += [pos-faible=+].
encombrement : noun += [pos-faible=+].
prix : noun += [pos-faible=+].
"prix de revient" : noun += [pos-faible=+].
risque : noun += [pos-faible=+].




