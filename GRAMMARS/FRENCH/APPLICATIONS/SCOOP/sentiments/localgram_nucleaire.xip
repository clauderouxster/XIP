// localgram_nucleaire.xip
// grammaire locale pour le nucléaire
// créé: 7.3.2008 (Sigrid Maurel)
// modifié: 2.9.2008 (Sigrid Maurel)


Séquence:

// Les Verts, Green Peace, Sortir du nucléaire, ...
1> noun[nucl=+, parti=+, proper=+, sousdomaine=lesverts] = det[lemme:le, pl:+], noun[lemme:vert, pl:+].
1> noun[nucl=+, parti=+, proper=+, sousdomaine=greenpeace] = noun[surface:Green], noun[surface:Peace].
1> noun[nucl=+, parti=+, proper=+, sousdomaine=greenpeace] = noun[surface:green], noun[surface:peace].
1> noun[nucl=+, parti=+, proper=+, sousdomaine=sortir] = verb[maj:+, inf:+, lemme:sortir], prep[lemme:de],
 noun[lemme:nucléaire, nucl=~].
1> noun[nucl=+, parti=+, proper=+, sousdomaine=sortir] @= noun[lemme:réseau], (punct),
 verb[inf:+, lemme:sortir], prep[lemme:de], noun[lemme:nucléaire, nucl=~], (punct).
1> noun[nucl=+, parti=+, proper=+, sousdomaine=amisterre] = (det[lemme:le]), noun[lemme:ami], prep[lemme:de],
 det[lemme:le], noun[lemme:terre].
1> noun[nucl=+, parti=+, proper=+, sousdomaine=fne] = noun[lemme:France], noun[lemme:nature],
 noun[lemme:environnement].
1> noun[nucl=+, parti=+, proper=+, sousdomaine=coord] = noun[lemme:coordination], adj[lemme:national],
 prep[lemme:de], noun[lemme:élu], prep[lemme:contre], det[lemme:le], noun[lemme:enfouissement].
1> noun[nucl=+, parti=+, proper=+, sousdomaine=com] = noun[lemme:commission], prep[lemme:de],
 noun[lemme:recherche], coord[lemme:et], prep[lemme:de], noun[lemme:information], adj[lemme:indépendant],
 prep[lemme:sur], det[lemme:le], noun[lemme:radioactivité, nucl=~]. 
1> noun[nucl=+, firme=+, proper=+, sousdomaine=sfen] = noun[lemme:société], adj[lemme:français], prep[lemme:de],
 noun[lemme:énergie], adj[lemme:nucléaire, nucl=~].
1> noun[nucl=+, parti=+, proper=+, sousdomaine=alliance] = (det[lemme:le]), noun[lemme:alliance],
 prep[lemme:pour], det[lemme:le], noun[lemme:planète].


// Areva, EDF, GDF, CEA, CGT
// Nuclear Cycle, avant: Cogema
1> noun[firme=+, nucl=+, sousdomaine=areva] = noun[lemme:Areva, firme=~], ?[surface:NC]; ?[surface:nc].
// Nuclear Power, avant: Framatome ANP
1> noun[firme=+, nucl=+, sousdomaine=areva] = noun[lemme:Areva, firme=~], ?[surface:NP]; ?[surface:np].
// Renouvelable
1> noun[firme=+, nucl=+, sousdomaine=areva] = noun[lemme:Areva, firme=~], ?[surface:R]; ?[surface:r].
// avant: Technicatome
1> noun[firme=+, nucl=+, sousdomaine=areva] = noun[lemme:Areva, firme=~], ?[surface:TA]; ?[surface:ta].
// Transmission et Distribution, avant: T&D Alstom
1> noun[firme=+, nucl=+, sousdomaine=areva] = noun[lemme:Areva, firme=~], ?[lemme:t], coord,
 ?[surface:D]; ?[surface:d].
1> noun[firme=+, nucl=+, sousdomaine=edf] = noun[lemme:électricité], prep[lemme:de], noun[lemme:France].
1> noun[firme=+, nucl=+, sousdomaine=edf] = noun[lemme:gaz], prep[lemme:de], noun[lemme:France].
1> noun[firme=+, nucl=+, sousdomaine=cea] = noun[lemme:commisariat], (prep), (det), noun[lemme:énergie],
 adj[lemme:atomique].
1> noun[firme=+, nucl=+, sousdomaine=cnrs] = noun[lemme:centre], adj[lemme:national], (prep), (det),
 noun[lemme:recherche], adj[lemme:scientifique].
1> noun[firme=+, nucl=+, sousdomaine=cgt] = noun[lemme:CGT, firme=~], noun[lemme:mine], (punct),
 noun[lemme:énergie].



// vocabulaire divers
5> noun[nucl=+] = noun[lemme:gaz], prep[lemme:à], noun[lemme:effet], prep[lemme:de], noun[lemme:serre].
5> noun[nucl=+] = noun[lemme:métal], adj[lemme:lourd].
5> noun[nucl=+] = noun[lemme:substance], adj[lemme:issu], prep[lemme:de], noun[lemme:nucléaire].
5> noun[nucl=+] = noun[lemme:traité], noun[surface:Euratom]; noun[surface:EURATOM]; noun[surface:euratom].
