Vocabulaires:

// divers
bio :: ? = adj[adj=+, masc=+, fem=+, sg=+, lemme=biologique].
bios :: ? = adj[adj=+, masc=+, fem=+, pl=+, lemme=biologique].
écolo :: ? = adj[adj=+, masc=+, fem=+, sg=+, lemme=écologique].
écolos :: ? = adj[adj=+, masc=+, fem=+, pl=+, lemme=écologique].
ecolo :: ? = adj[adj=+, masc=+, fem=+, sg=+, lemme=écologique].
ecolos :: ? = adj[adj=+, masc=+, fem=+, pl=+, lemme=écologique].



//----------------------------------------------------------------------------------------------------
// positif:
//disponible : adj += [sents=+, positif=+].
inépuisable : adj += [sents=+, positif=+].
//renouvelable : adj += [sents=+, positif=+].



//----------------------------------------------------------------------------------------------------
// négatif:
épuisable : adj += [sents=+, negatif=+].
limité : adj += [sents=+, negatif=+].
nocif : adj += [sents=+, negatif=+].
nuisible : adj += [sents=+, negatif=+].
polluant : adj += [sents=+, negatif=+].



//----------------------------------------------------------------------------------------------------
// noms pour éviter la dépendance
augmentation : noun += [no-sents=+].
citoyen : noun += [no-sents=+].
train : noun += [no-sents=+].



//----------------------------------------------------------------------------------------------------
// mots qui sont pas des sentiments pour le nucléaire
intéressant : adj += [sents=~, positif=~, enchante=~].
interessant : adj += [sents=~, positif=~, enchante=~].
intéresser : verb += [sents=~, positif=~, enchante=~].


