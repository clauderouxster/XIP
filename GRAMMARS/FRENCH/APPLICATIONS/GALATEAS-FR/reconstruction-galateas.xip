2> NP{?*#1,#2[last,sameagreement]},AP+#3[sameagreement],?+#4[sameagreement:~]  = NP{#1,#2,#3},#4.


2> NP{?*#1,#2[last,sameagreement]},AP-#3[sameagreement]= NP{#1,#2,#3},  where (#2[gender]:#3[gender] & #2[number]:#3[number]) .

