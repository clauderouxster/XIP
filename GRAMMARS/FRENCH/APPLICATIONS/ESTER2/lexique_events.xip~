Vocabulaires:

// evenements pour le tourisme


//***** mots amorces *****

festival : noun[sg] += [ debutEvent:=+,culturel:=+,finEvent:=+].
exposition : noun[sg] += [ debutEvent=+,culturel:=+].
biennale : noun[sg] += [ debutEvent=+,culturel:=+].
Mostra  : noun[sg] += [ debutEvent=+,culturel:=+].
carnaval  : noun[sg] += [ debutEvent=+,culturel:=+].
salon  : noun[sg] += [ debutEvent=+]. 
foire  : noun[sg] += [ debutEvent=+]. 
congrés : noun[sg] += [ debutEvent=+]. 
Carnival : noun[sg] += [finEvent:=+,culturel:=+].
Festi  : noun[sg] += [ debutEvent:=+,culturel:=+,guessed=~,pl=~].

// ******types*****

//** bd
BD: noun += [bd=+].
manga : noun += [bd=+].

//** cinema
film  : noun += [ cinema=+].
documentaire : noun += [ cinema=+].
cinéma : : noun += [ cinema:=+].
Cinéma : : noun += [ cinema:=+].

//** danse
danse : noun += [ danse=+].
ballet  : noun += [ danse=+].

//theatre
théatre : noun += [theatre=+].

//musique
Musica  : noun += [musique:=+].
jazz : noun += [musique=+].
rock : noun += [musique=+].
Rock : noun += [musique=+].
blues : noun += [musique=+].
opéra : noun += [musique=+].
musique : noun += [musique=+].
folk : noun += [musique=+].
pop : noun += [musique=+].
bluegrass : noun += [musique=+].
chant : noun += [musique=+].
chanson  : noun += [musique=+].
Music  : noun += [musique:=+].
music  : noun += [musique:=+].
reggae  : noun += [musique:=+].
fanfare  : noun += [musique:=+].
orchestre  : noun += [musique:=+].
Eurockéennes  : noun += [musique:=+].
//*** instruments
percussion : noun += [musique=+].
guitare : noun += [musique=+].
piano : noun += [musique=+].
violon : noun += [musique=+].
accordéon  : noun += [musique=+].
saxophone : noun += [musique=+].
violoncelle : noun += [musique=+].
harpe  : noun += [musique=+].
batterie  : noun += [musique=+].
trompette  : noun += [musique=+].
flûte : noun += [musique=+].
harmonica: noun += [musique=+].

//** jeux
jeu : noun += [jeu=+].
jouet : noun += [jeu=+].

// litterature

livre : noun += [litterature=+].
roman  : noun += [litterature=+].

//autres

peinture: noun[pl:~] += [peinture=+].
architecture : noun[pl:~] += [architecture=+].
sculpture : noun[pl:~]  += [sculpture=+].
photographie : noun[pl:~] +=[photo=+].
photo : : noun[pl:~] +=[photo=+].



// autres types d'evenements

// guerre

guerre : noun += [guerre=+].
guerre\ civile  : noun += [guerre=+].
bataille  : noun += [guerre=+].
débarquement : noun += [guerre=+].

// Evenements

FIAC : noun += [event:=+,acron:=+,mwe:=+,culturel:=+].
