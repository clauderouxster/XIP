Features:
 [features: 
  [

	cat:{0},

// -----------------------------------------------------------------------------
// MAIN CATGEORIES 
// -----------------------------------------------------------------------------
	adj:{+},		// adjective
	adv:{+},		// adverb
	conj:{+},		// conjunction
	cpd:{+},		// compound part
	det:{+},		// determiner
	interj:{+},		// interjection
	noun:{+},		// noun.
	num:{+},		// numeral
	prep:{+},		// preposition
	pron:{+},		// pronoun
	ptcl:{+},		// particle
	punct:{+},		// punctuation
	symbol:{+},		// symbol
	verb:{+},		// verb

	quant:{+},		// quantifier

// derivational tags
	deriv_adj:{+},		// derived from Adj
	deriv_num:{+},		// derived from Num
	deriv_verb:{+},		// derived from Verb

// morphological features
	case: 	[ 	nom:{+},	// nominative
			acc:{+},	// accusative 
			dat:{+},	// dative
			gen:{+}	// genitive
		],
	number: 	[	sg:{+},
			pl:{+}
		],
	person:	[	p1:{+},		// 1st Person
			p2:{+},		// 2nd Person
			p3:{+}		// 3rd Person
		],
	gender:	[	fem:{+},
			masc:{+},
			neut:{+}
		],
	
	vmood:	[	conjv:{+},		// conjunctive  
			impv:{+},		// imperative	
			indic:{+},		// indicative
			inf:{+},		// infinitive	
			fin:{+}		// finite verb
		],
	tense:  [
			past:{+},		// past tense 
			pres:{+},		// present tense
			pastpart:{+},		// past participle
			prespart:{+}		// present participle
		],

	pred:{+},		// copula (in dutch: 'koppelwerkwoorden')
	aux:{+},		// auxiliary verbs
	modal:{+},		// modal verbs
	causal:{+},	// causal verbs (doen, laten)

// for adjectives or nouns
	basic:{+},		// basic form		veel
	decl:{+},		// declined form 		vele
	nform:{+},		// "nominalisation" form 	velen
	comp:{+},		// comparative 
	dim:{+},		// diminutive
	sup:{+},		// superlative 
	nobj:{+},		// no object -- can not function as object.

// for determiners, pronouns, etc.
	art:{+},		// article
	def:{+},		// definite
	dem:{+},		// demonstrative
	indef:{+},		// indefinite	
	interrog:{+},	// interrogative
	pers:{+},		// personal (pronoun)
	poss:{+},		// possessive
	rec:{+},		// reciprocal  	
	refl:{+},		// reflexive
	rel:{+},		// relative

	pronpart:{+},	// pronomial adverb part.

// for conjunctions:
	coord:{+},		// coordinating conjunction
	subord:{+},		// subordinating conjunction
	infconj:{+},		// infinitval conjunction

// for prepositions
	postp:{+},
	circp:{+},		// right part of preposition

// for numerals
	card:{+},		// cardinal number 
	dig:{+},		// digital numeral
	ord:{+},		// ordinal number
	rom:{+},		// roman (numeral)
	deg:{+},		// degrees
	date:{+},		// date	expression
	time:{+},		// clock time  	
	year:{+},		// year (digit)	
	month:{+},		// month of the year
	weekday:{+},	// day of the week

// for proper nouns:
	proper:{+},	// proper noun
	city:{+},		// city, town name
	continent:{+},	// continent 
	country:{+},	// country
	lastname:{+},	// last name
	firstname:{+},	// firstname
	org:{+},		// organization
	place:{+},		// place name
	region:{+},	// region
	state:{+},		// state


// for punctuations:
	comma:{+},		// comma  
	sent:{+},		// sentence final
	quote:{+},
	colon:{+},
	paren:{+},
	

// other
	abbr:{+},		// abbreviations
	emph:{+},		// emphatic  
	initial:{+},	// initials
	letter:{+},	// single letter
	expr:{+},		// expression, noun phrase
	neg:{+},		// negative
	onom:{+},		// onomatopoeia
	postmod:{+},	// post-modifier
	pronom:{+},	// pronominal (adverb)
	sep:{+},		// separeted particle
	title:{+},		// title
	amod:{+},		// adjective/adverb modifier

	guessed:{+},	// non-lexicalized words

	compound:{+},	// when it is a compound
	chead:{+},		// right part of a truncated compound (e.g. -plantage)

	inf_te:{+},
	not:{+},		// negation "niet" (="not") AS@28/09/2010
// -----------------------------------------------------------------------------
// CHUNKS
// -----------------------------------------------------------------------------
	ap:{+},		// adjectival phrase
	np:{+},		// noun phrase
	pp:{+},		// prepositional phrase
	vp:{+},		// verbal phrase
	sc:{+},		// main clause
	vc:{+},		// verb cluster

// -----------------------------------------------------------------------------
// required :

cap:{+},
allcap:{+}

 ]
]


