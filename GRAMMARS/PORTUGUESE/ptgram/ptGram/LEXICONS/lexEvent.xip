Vocabulary:
//==============================================================================
//==============================================================================
// Political (organized) events
//==============================================================================
//==============================================================================
"acto eleitoral":               noun += [organized=+,political=+].
almoço-comício:                 noun += [organized=+,political=+].
campanha:                       noun += [organized=+,political=+].
"campanha eleitoral":           noun += [organized=+,political=+].
cimeira:                        noun += [organized=+,political=+].
"cimeira ?+":                   noun += [organized=+,political=+].
comício:                        noun += [organized=+,political=+].
jantar-comício:                 noun += [organized=+,political=+].
"pré-campanha":                 noun += [organized=+,political=+].
"Pré-campanha":                 noun += [organized=+,political=+].

//==============================================================================
//==============================================================================
// Scientific (organized) events
//==============================================================================
//==============================================================================
encontro:                       noun += [organized=+,scientific=+].
colóquio:                       noun += [organized=+,scientific=+].
"colóquio ?+":                  noun += [organized=+,scientific=+].
seminário:                      noun += [organized=+,scientific=+].
"seminário ?+":                 noun += [organized=+,scientific=+].
simpósio:                       noun += [organized=+,scientific=+].
"simpósio ?+":                  noun += [organized=+,scientific=+].

//==============================================================================
//==============================================================================
// Artistic (organized) events
//==============================================================================
//==============================================================================
