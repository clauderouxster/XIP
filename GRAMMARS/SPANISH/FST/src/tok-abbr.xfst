];
define Letter

define INITIAL  [ Letter %. ]+;

# -------------------------------------------------------------------------------------

echo >>> "small" roman numerals

regex
[
	[ ( [ x c | l | x l | (l) (x (x (x))) ] )
	  ( [ i x | v | i v | (v) (i (i (i))) ] )
	]
|	[ ( [ X C | L | X L | (L) (X (X (X))) ] )
	  ( [ I X | V | I V | (V) (I (I (I))) ] )
	]
] - [];
define NumRom

echo >>> roman ordinals

define ROMAN	[ NumRom %. ]+ ;


# ------------------------------------------------------------------------
regex [ ABBR | INITIAL | ROMAN ];
