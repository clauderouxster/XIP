Vocabulary:


// sufix for organizations
// going to be used in localgram rules for organizations (companies)
Telecom:       	       noun += [sufix_company:+] .
Airways:	       	 noun += [sufix_company:+] .
"S.A.":	       	 noun += [sufix_company:+] .
"SA.":	       	 noun += [sufix_company:+] .
"SA":	       	 noun += [sufix_company:+] .
"S.L.":	       	 noun += [sufix_company:+] .
"SL":		             noun += [sufix_company:+] .
"SL.":		       noun += [sufix_company:+].
holding:	             noun += [sufix_company:+] .
Press:		       noun += [sufix_company:+] .

// prefix for organizations
// going to be used in localgram rules for organizations (companies)
banco:	       	       noun += [prefix_company:+] .
compañía:	       noun += [prefix_company:+] .
aerolínea:	       noun += [prefix_company:+] .


// Adding some features in political organizations
congreso:       		noun += [org:+].
parlamento:			noun += [org:+].



// Adding features on teaching institutions
universidad:	      	       noun += [school:+,common:+].
facultad:		       noun += [school:+,common:+].
escuela:		       noun += [school:+,common:+].
instituto:		       noun += [school:+,common:+].


// introduces organization (with de introducing people)
administración:			noun += [introd_org:+,common:+] .
gobierno:			noun += [introd_org:+,common:+] .
asociación:			noun += [introd_org:+,common:+] .
dirección:			noun += [introd_org:+,common:+] .


// introducing commercial org.
revista:			noun += [introd_company:+,common:+] .
jornal:				noun += [introd_company:+,common:+] .
filial:				noun += [introd_company:+,common:+] .
holding:			noun += [introd_company:+,common:+] .
consorcio:			noun += [introd_company:+,common:+] .
empresa:			noun += [introd_company:+,common:+] .
grupo:				noun += [introd_company:+,common:+] .
aseguradora:			noun += [introd_company:+,common:+] .
editorial:			noun += [introd_company:+,common:+] .



