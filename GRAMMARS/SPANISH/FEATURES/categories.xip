/*****************************************
        BASIC CATEGORIES
*****************************************\


 top = [cat=0].      /acts as root to chunking trees\
 
adj = [adj=+].		// adjective
adv = [adv=+].		// adverb
art = [art=+].		// article
conj = [conj=+].	// conjunction
det = [det=+].		// determiner
interj = [interj=+].	// interjection
noun = [noun=+].	// common or proper noun
num = [num=+].		// numeral
prep = [prep=+].	// preposition
pron = [pron=+].	// pronoun
punct = [punct=+].	// punctuation
quant = [quant=+].	// quantifier
symbol = [symbol=+].	// special symbol
verb = [verb=+].	// verb
misc = [misc=+].	// word parts, foreign words, etc.
predet = [predet=+].
locut = [locut=+].      //locution



/****************************
       Chunks and phrases
*****************************\


AP = [ap=+] 	// adjectival phrase
NP = [np=+].	// noun phrase
PP = [pp=+].	// prepositional phrase
VP = [vp=+].	// verbal phrase
FV = [fv=+].    // finite verb phrase
SC = [sc=+].    // chunk sentence
CC = [cc=+].    // comparative chunker
IC = [ic=+].    // interrogatif chunker
AVP = [avp=+].  // adverbial phrase
VPART = [vpart=+].
VINF = [vinf=+].
VGER = [vger=+].
REFLEX = [reflex=+].
PEU = [peu=+].

