Vocabulary:

// sentential adverbs (no adjective modifiers)
auch:adv 		+= [sadv=+].
außerdem:adv	+= [sadv=+].
dennoch		+= [sadv=+].
manchmal:adv	+= [sadv=+].
trotzdem		+= [sadv=+].
zudem:adv 	+= [sadv=+].
noch:adv		+= [sadv=+].

heute:adv		+= [sadv=+,temporal=+].
gestern:adv	+= [sadv=+,temporal=+].
morgen:adv	+= [sadv=+,temporal=+].
vorgestern:adv	+= [sadv=+,temporal=+].
übermorgen:adv	+= [sadv=+,temporal=+].
jetzt:adv		+= [sadv=+,temporal=+].
damals:adv	+= [sadv=+,temporal=+].


circa:adv		+= [prenum=+].
etwa:adv		+= [prenum=+].
höchstens:adv	+= [prenum=+].
mindestens:adv	+= [prenum=+].
nur:adv		+= [prenum=+].
rund:adv		+= [prenum=+].
maximal		+= adv[prenum=+].
minimal		+= adv[prenum=+].

v\.Chr\.:adv	+= [postmod=+, year=+].
n\.Chr\.:adv	+= [postmod=+, year=+].
AC : adv		+= [postmod=+, year=+].

eingangs	 	+= adv.
