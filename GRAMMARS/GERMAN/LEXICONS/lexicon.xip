Vocabulary:


// Verneinter Artikel
kein:det		+= [neg=+].


// prädikative Verben
sein:verb		+= [pred=+].
werden:verb		+= [pred=+].
bleiben:verb		+= [pred=+].
heißen:verb		+= [pred=+].
aussehen:verb	+= [pred=+].
wirken:verb		+= [pred=+].
scheinen:verb	+= [pred=+].
erscheinen:verb	+= [pred=+].
dünken:verb	+= [pred=+].


// (Wetter)Verben mit unpersönlichem Subjekt
regnen:verb		+= [imperso=+].
schneien:verb	+= [imperso=+].
stürmen:verb	+= [imperso=+].
hageln:verb		+= [imperso=+].
//  aussehen ?? "es sah aus, als ..."
//  geben ?? "es gibt vieles, das ..."


// Präpositionen, die kein VMOD bilden sollen
während:prep	+=[novmod=+].
wegen:prep		+=[novmod=+].
mit:prep		+=[novmod=+].
außer:prep		+=[novmod=+].
