DependencyRules:

// modals

| #1[aux,modal=+] |
if ( NUCL[modal](#1,#2) )
   ~.

// epistemic verbs

| #1[analysis,verb,epistemic=+,last] |
  ~.

//subordination connectives

| #1[conj,sub,conjsub=+] |
  ~.

//causatives: link + verb

| #1[link,verb,causative=+,last] |
  ~.

//affective verbs

| #1[stance,verb,affective=+,last] |
  ~.

//negation
//contr_neg

| #1[contr_neg,negation=+] |
  ~.

| #1[neg,negation=+] |
  ~.

| #1[form:fnot,negation=+] |
  ~.

| #1[form:fno,negation=+] |
  ~.


//question

| #1[form:fquest,question=+] |
  ~.


