<?xml version="1.0" encoding="UTF-8"?>

<project name="test" default="all" basedir=".">
    <taskdef resource="net/sf/antcontrib/antlib.xml">
        <classpath>
            <pathelement location="/opt/ParSem/tools/ant-contrib/ant-contrib-1.0b3.jar"/>
        </classpath>
    </taskdef>

    <target name="all" depends="clean, compile, run" />

    <target name="compile" depends="init">
        <mkdir dir="${classDir}"/>
        <javac srcdir="${srcDir}" destdir="${classDir}" failonerror="true" >
            <include name="**/*.java"/>
            <compilerarg value="-Xlint"/>
            <classpath refid="comp.class.path" />
        </javac>
    </target>

    <target name="run" depends="init" description="run">
        <java  classname="test.Main" fork="true" failonerror="true" maxmemory="512m">
            <classpath refid="comp.class.path" />
        </java>
    </target>

    <target name="jar" depends="init, clean, compile" description="compile, and build jar">
        <delete file="${jarFile}" />
        <jar basedir="${classDir}" destfile="${jarFile}" >
            <manifest>
                <attribute name="Built-By" value="${user.name}"/>
                <attribute name="Main-class" value="test.Main"/>
                <attribute name="Class-path" value="."/>
            </manifest>
            <zipfileset src="${log4j.jar}" />
            <zipfileset src="${h2.path}/h2.jar" />
            <zipfileset src="${toplink.path}/toplink-essentials.jar" />
            <zipfileset src="${toplink.path}/toplink-essentials-agent.jar" />
            <metainf dir="${srcDir}/META-INF" includes="persistence.xml" />
        </jar>
    </target>

    <target name="runJar" depends="init" description="run using the jar" >
        <java  fork="true" failonerror="true" maxmemory="512m" classname="test.Main">
            <classpath>
                <pathelement location="${configDir}"/>
                <pathelement location="${jarFile}"/>
            </classpath>
        </java>
    </target>


    <target name="makaluDirs" depends="init" description="create dirs on the machine makalu">
        <sshexec host="${rhost.name}" username="${rhost.login}" command="mkdir /home/cacao/advUI/test/testDB">
        </sshexec>
    </target>

    <target name="makaluInst" depends="init, jar" description="install test on the machine makalu">
        <scp keyfile="${keyfile}" passphrase=""
                todir="${rhost.login}@${rhost.name}:/home/cacao/advUI/test/testDB"
                verbose="true"  failonerror="true" >
            <fileset file="${jarFile}" />
        </scp>
    </target>

    <target name="makaluRun" depends="init" description="run testBD on the machine makalu">
        <sshexec host="${rhost.name}" username="${rhost.login}" keyfile="${keyfile}" passphrase=""
            command="java -cp ${jarFileName} test.Main" failonerror="true"
                outputproperty="${out}" verbose="true" />
        <echo message="${out}" />
    </target>

    <target name="clean" depends="propertiesSetting">
        <delete dir="${buildDir}"/>
    </target>

    <target name="init" depends="propertiesSetting">
        <mkdir dir="${buildDir}"/>
        <mkdir dir="${classDir}"/>
    </target>

    <target name="propertiesSetting">
        <property name="srcDir" location="${basedir}/src" />
        <property name="buildDir" location="${basedir}/build" />
        <property name="configDir" location="${basedir}/config" />
        <property name="classDir" location="${buildDir}/classes" />
        <property name="libExt" location="${basedir}/../../../libExt" />
        <property name="jarFileName" value="test.jar" />
        <property name="jarFile" location="${buildDir}/${jarFileName}" />
        <property name="log4j.jar" location="${libExt}/log4j/1.2.15/log4j-1.2.15.jar" />
        <property name="h2.path" location="${libExt}/h2" />
        <property name="toplink.path" location="${libExt}/toplink" />
        <property name="keyfile" location="${user.home}/.ssh/id_rsa" />
        <path id="comp.class.path">
            <pathelement location="${srcDir}"/>
            <pathelement path="${classDir}"/>
            <pathelement location="${log4j.jar}"/>
            <fileset dir="${toplink.path}"
                includes="toplink-essentials.jar toplink-essentials-agent.jar" />
            <fileset dir="${h2.path}"
                includes="h2.jar" />
        </path>
        <property name="rhost.name" value="makalu.xrce.xerox.com" />
        <property name="rhost.login" value="cacao" />
    </target>

</project>
