<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>db_testsimple_2.Facet</class>
    <class>db_testsimple_2.Document</class>
    <class>db_testsimple_2.FacetValue</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
  </persistence-unit>
  <persistence-unit name="h2-server" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>db_testsimple_2.Facet</class>
    <class>db_testsimple_2.Document</class>
    <class>db_testsimple_2.FacetValue</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="toplink.jdbc.user" value="sa"/>
      <property name="toplink.jdbc.password" value=""/>
      <property name="toplink.jdbc.url" value="jdbc:h2:tcp://localhost/classification"/>
      <property name="toplink.jdbc.driver" value="org.h2.Driver"/>
      <property name="toplink.target-database" value="oracle.toplink.essentials.platform.database.H2Platform"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="h2-embedded" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>db_testsimple_2.Facet</class>
    <class>db_testsimple_2.Document</class>
    <class>db_testsimple_2.FacetValue</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="toplink.jdbc.user" value="sa"/>
      <property name="toplink.jdbc.password" value=""/>
      <property name="toplink.jdbc.url" value="jdbc:h2:file:./db/classification"/>
      <property name="toplink.jdbc.driver" value="org.h2.Driver"/>
      <property name="toplink.target-database" value="oracle.toplink.essentials.platform.database.H2Platform"/>
    </properties>
  </persistence-unit>
</persistence>
