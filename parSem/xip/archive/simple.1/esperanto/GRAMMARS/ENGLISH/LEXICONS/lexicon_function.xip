Vocabulary:


// Adding features on activities names (e.g. CEO, Chief, Researcher...)
CEO += [occup:+].
chairman += [occup:+].
chief += [occup:+].
conceptor += [occup:+].
designer += [occup:+].
author += [occup:+] .
director += [occup:+] .
responsible += [occup:+].
president += [occup:+].
vice-president += [occup:+].
secretary += [occup:+].
representative += [occup:+].

award += [grant:+] .
prize += [grant:+] .
grant += [grant:+] .
knight += [grant:+] .


position += [position:+] .
fellowship += [position:+] .
responsibility += [position:+] .
function += [position:+].


// localization verbs
live += [stay_v:+].
remain += [stay_v:+].
stay += [stay_v:+].
continue += [stay_v:+].
cohabit += [stay_v:+].
reside += [stay_v:+].
spend += [stay_v:+].

// verbs that can be assimilated to copula for activies
// e.g she served as noun[occup:+], she acted as noun[occup:+]
serve += [cop_as:+].
act += [cop_as:+].

// nomination verbs used in passive form
appoint += [nomin_v:+].
name += [nomin_v:+].
charge += [nomin_v:+].
designate += [nomin_v:+].
elect += [nomin_v:+].
place += [nomin_v:+].


// ASPECTUAL FEATURES
// start action verb
begin += [start_action:+].
start += [start_action:+].
commence += [start_action:+].
initiate += [start_action:+].
originate += [start_action:+].
undertake += [start_action:+].


// end action verbs
end += [end_action:+].
finish += [end_action:+].
stop += [end_action:+].
complete += [end_action:+].
achieve += [end_action:+].
leave += [end_action:+].

// Activity action verbs
work += [occup:+].
conceive += [occup:+].
build += [occup:+].
direct += [occup:+].
design += [occup:+].
write += [occup:+].
find += [occup:+].
found += [occup:+].



// FOR REFERENTIAL TEMPORAL EXPRESSIONS
prior_to += [reftime:+,before:+,time:+].
after += [reftime:+,after:+,time:+].
before += [reftime:+,before:+,time:+].
since += [reftime:+,at:+,time:+].
at += [reftime:+,at:+,time:+].

