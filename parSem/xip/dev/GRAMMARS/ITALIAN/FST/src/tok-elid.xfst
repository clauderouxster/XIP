echo >>> list of elisions
regex [
  [a|A] ([{ddi}|{gl}|{ll}|{nch}|{rtefa}|{ssuefa}])
| [b|B] {ell} 
| [c|C] ([a|h|{ogl}|{oll}|{om}|{onfa}|{os}])
| [d|D] ([a|{agl}|{all}|e|{egl}|{ell}|{ELL}|{ev}|i|{isassuefa}|{isdi}|{isfa}|{ov}])
| [E|e] (x %- [{ca}|{fra}|{mo}|{po}])
| [f|F] (r) a
| [g|G] l ({iel}) 
| [i|I] [{ndi}|{nsta}|{nterdi}|{sta}]
| [l|L] ({iquefa})
| [m|M] ([{ansuefa}|{ezz}|o])
| [n|N] ([{egl}|{ell}])
| [p|P] [{egl}|o|{redi}|{utrefa}]
| [q|Q] [{uand}|{uant}|{uell}|{uest}]
| [r|R] [{arefa}|{ida}|{idi}|{ifa}|{ista}|{iva}]
| [s|S] ([{ant}|{enz}|{oddisfa}|{opraffa}|{oprasta}|{ott} ({osta})|{ta}|{trafa}|{tupefa}|{ugl}|{ull}])
| [t|T] ([{ant}|o|{utt}])
| [u|U] n
| [v|V] (a)
];
