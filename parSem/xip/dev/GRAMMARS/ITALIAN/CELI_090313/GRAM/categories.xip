POS:

/*****************************************
        BASIC CATEGORIES
*****************************************\


top = [cat=0].     //acts as root to chunking trees
 
adj = [adj=+].		// adjective
adv = [adv=+].		// adverb
//art = [art=+].		// article
conj = [conj=+].		// conjunction
conjche = [conj=+].		// che
det = [det=+].		// determiner
dig = [dig=+].		// digit.
interj = [interj=+].		// interjection

//------------------------------------------------------------------------------------------------------
// modified 10.9.2008 (Sigrid Maurel, CELI France):
// add of feature "3p" to nouns
//noun = [noun=+].		// common or proper noun
noun = [noun=+, 3p=+].
//------------------------------------------------------------------------------------------------------

num = [num=+].		// numeral
prep = [prep=+].		// preposition
pron = [pron=+].		// pronoun
punct = [punct=+].		// punctuation
quant = [quant=+].		// quantifier
symbol = [symbol=+].		// special symbol
verb = [verb=+].		// verb
misc = [misc=+].		// word parts, foreign words, etc.
demadj = [adj=+,dem=+]	// demonstrative adjective	GD
neg = [neg=+].		// negazione	GD
connche = [conjche=+].  	// che GD
