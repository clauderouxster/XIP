supprimer:		verb += [v_evid:-] .
écarter:		verb += [v_evid:-] .
évincer:		verb += [v_evid:-] .


//laisser de côté
//mettre au ban
//mettre à l'index
//tenir à l'écart


annulation:		noun += [n_evid:-] .
disparition:		noun += [n_evid:-] .



// SPECIFIQUE AU DOMAINE MEDICAL
//EVIDENCE
diagnostique:		noun += [n_evid:+] .




// AUGMENTATION

// noms indiquant une idée de montée, augmentation

aggravation:		noun += [augment:+] .
amélioration:		noun += [augment:+] .
ascension:		noun += [augment:+] .
augmentation:		noun += [augment:+] .
montée:			noun += [augment:+] .
pic:			noun += [augment:+] .
réascension:		noun += [augment:+] .
// A RAJOUTER SUITE A EVAL
//exacerbation:		noun += [augment:+] .


// verbes indiquant une idée d'augmentation

augmenter:		verb += [augment:+] .
monter:			verb += [augment:+] .
remonter:		verb += [augment:+] .
// A RAJOUTER SUITE A EVAL
// exacerber:		verb += [augment:+] .




// DIMINUTION

// nom indiquant idee de baisse
affaiblissement:      noun += [augment:-] .
baisse:		      noun += [augment:-] .
//chute:		      noun += [augment:-] . trop ambigu pour le contexte
diminution:	      noun += [augment:-] .
régression:	      noun += [augment:-] .

déclin:		      noun += [augment:-] .
dégradation:	      noun += [augment:-] .
réduction:	      noun += [augment:-] .

// verb indiquant idee de baisse
baisser:	       verb += [augment:-] .
chuter:		       verb += [augment:-] .
diminuer:	       verb += [augment:-] .



// CONTINUITE

// verbes de continuité

continuer:		verb += [contin:+] .
maintenir:		verb += [contin:+] .
persister:		verb += [contin:+] .
stabiliser:		verb += [contin:+] .


// nom de continuité
persistance:		noun += [contin:+] .
stabilité:		noun += [contin:+] .

// adj de continuite

persistant:		adj += [contin:+] .


// ARRET
// verbes
cesser:			verb += [contin:-] .
passer:			verb += [contin:-] .
terminer:		verb += [contin:-] .
arrêter:		verb += [contin:-] .
enrayer:		verb += [contin:-] .

// noms
arrêt:			noun += [contin:-] .
cessation:		noun += [contin:-] .
défection:		noun += [contin:-] .
fin:			noun += [contin:-] .
suppression:		noun += [contin:-] .
évanouissement:		noun += [contin:-] .
dissipation:	        noun += [contin:-] .

// APPARITON, COMMENCEMENT
// note: les antonymes on le trait contin:- (eg. fin, arret etc.)

entreprendre:		verb += [appar:+] .
commencer:		verb += [appar:+] .

commencement:		noun += [appar:+] .


