vocabulaires:



// EXISTENCE
// les predicats d'existence auront une polarite:+

demeurer:		verb += [v_exist:+] .
dénoter:		verb += [v_exist:+] .
exister:	 	verb += [v_exist:+] .
perdurer:		verb += [v_exist:+] .
persister:		verb += [v_exist:+] .
refléter:		verb += [v_exist:+] .
subsister:		verb += [v_exist:+] .
// y avoir est codé par règle locale


existence:		noun += [n_exist:+] .
persistance:		noun += [n_exist:+] .
présence:		noun += [n_exist:+] .


// NON_EXISTENCE
//
éliminer:		verb += [v_exist:-] .



absence:		noun += [n_exist:-] .
échec:			noun += [n_exist:-] .
impossibilité:		noun += [n_exist:-] .

// EVIDENCE
// 
afficher:		verb += [v_evid:+] .
attester: 		verb += [v_evid:+] .
avoir:			verb += [v_evid:+] .
constater:		verb += [v_evid:+] .
dévoiler:		verb += [v_evid:+] .
exhiber:		verb += [v_evid:+] .
exposer:		verb += [v_evid:+] .
indiquer:		verb += [v_evid:+] .
montrer:		verb += [v_evid:+] .
noter:			verb += [v_evid:+] .
nécessiter:		verb += [v_evid:+] .
produire:		verb += [v_evid:+] .
présenter: 		verb += [v_evid:+] .
refléter:		verb += [v_evid:+] .
retenir:		verb += [v_evid:+] .
retrouver:		verb += [v_evid:+] .
réaliser:		verb += [v_evid:+] .
révéler:		verb += [v_evid:+] .
souligner:		verb += [v_evid:+] .
trouver:		verb += [v_evid:+] .


// SUSPICION
// on les code avec le trait v_evid:+, cependant a revoir dans un traitement plus complet de la modalité
soupçonner:	       verb += [v_evid:+] .
suspecter:     	       verb += [v_evid:+] .


soupçon:	       noun += [n_evid:+] .
suspicion:	       noun += [n_evid:+] .



// ci-dessous constructions vb complexes codées par regles locale
//faire ressortir
//faire voir
//fournir la preuve de 
//mettre en évidence
//trahir la présence
//témoigner de

//mise en évidence
argument:		noun += [n_evid:+] .
caractéristique:	noun += [n_evid:+] .
indication:		noun += [n_evid:+] .
information:		noun += [n_evid:+] .
manifestation:		noun += [n_evid:+] .
piste:			noun += [n_evid:+] .
preuve:			noun += [n_evid:+] .
résultat:		noun += [n_evid:+] .
signal:			noun += [n_evid:+] .
signe:			noun += [n_evid:+] .
vestige:		noun += [n_evid:+] .
épisode:		noun += [n_evid:+] .



//
// NON_EVIDENCE
abandoner:		verb += [v_evid:-] .
bannir:			verb += [v_evid:-] .
disparaître:		verb += [v_evid:-] .
enlever:		verb += [v_evid:-] .
exclure:		verb += [v_evid:-] .
filtrer:		verb += [v_evid:-] .
proscrire:		verb += [v_evid:-] .
rayer:			verb += [v_evid:-] .
