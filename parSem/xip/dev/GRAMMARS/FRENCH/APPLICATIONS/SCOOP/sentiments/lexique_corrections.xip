Vocabulaires:

// sentiments positifs (attraction)
exellent :: ? = adj[adj=+, masc=+, sg=+, lemme=excellent, sents=+, positif=+, excite=+].
exellente :: ? = adj[adj=+, fem=+, sg=+, lemme=excellent, sents=+, positif=+, excite=+].
exellents :: ? = adj[adj=+, masc=+, pl=+, lemme=excellent, sents=+, positif=+, excite=+].
exellentes :: ? = adj[adj=+, fem=+, pl=+, lemme=excellent, sents=+, positif=+, excite=+].
exélent :: ? = adj[adj=+, masc=+, sg=+, lemme=excellent, sents=+, positif=+, excite=+].
exélente :: ? = adj[adj=+, fem=+, sg=+, lemme=excellent, sents=+, positif=+, excite=+].
exélents :: ? = adj[adj=+, masc=+, pl=+, lemme=excellent, sents=+, positif=+, excite=+].
exélentes :: ? = adj[adj=+, fem=+, pl=+, lemme=excellent, sents=+, positif=+, excite=+].
fun :: ? = adj[adj=+, masc=+, fem=+, sg=+, pl=+, lemme=fun, sents=+, positif=+].
impec :: ? = adj[adj=+, masc=+, fem=+, sg=+, pl=+, lemme=impeccable, sents=+, positif=+, excite=+].
sympatoche :: ? = adj[adj=+, masc=+, fem=+, sg=+, pl=+, lemme=sympa, sents=+, positif=+, detendu=+].



//----------------------------------------------------------------------------------------------------
// sentiments négatifs (répulsion)
cata :: ? = noun[noun=+, fem=+, sg=+, lemme=catastrophe, sents=+, negatif=+, reprochable=+].
chiant :: ? = adj[adj=+, masc=+, sg=+, lemme=chiant, sents=+, negatif=+, mepris=+].
chiante :: ? = adj[adj=+, fem=+, sg=+, lemme=chiant, sents=+, negatif=+, mepris=+].
chiants :: ? = adj[adj=+, masc=+, pl=+, lemme=chiant, sents=+, negatif=+, mepris=+].
chiantes :: ? = adj[adj=+, fem=+, pl=+, lemme=chiant, sents=+, negatif=+, mepris=+].



//----------------------------------------------------------------------------------------------------
// ajouts au lexique général:
aprés :: ? = prep[prep=+, lemme=après].
bcp :: ? = adv[adv=+, lemme=beaucoup].
bjr :: ? = adv[adv=+, lemme=bonjour].
c : ? += [no-sents=+, lemme="c'est"].
dem1 :: ? = adv[adv=+, lemme=demain].
env :: ? = adv[adv=+, lemme=environ].
//g : ? += [no-sents=+, lemme="j'ai"].				// g = j'ai, dans la plupart des cas
mal : adv += [psneg=+].
masi :: ? = coord[coord=+, lemme=mais].
moin :: ? = adv[adv=+, psneg=+, lemme=moins].
moins : adv += [psneg=+].
non : adv += [psneg=+].
peu : adv += [psneg=+].
pb :: ? = noun[noun=+, masc=+, lemme=problème].
suaf :: ? = prep[prep=+, lemme=sauf].
"surtout pas" : adv += [psneg=+].
tjs :: ? = adv[adv=+, lemme=toujours].
trés :: ? = adv[adv=+, lemme=très].
tro :: ? = adv[adv=+, trop=+, lemme=trop].
trop : adv += [trop=+].
tt :: ? = adv[adv=+, lemme=tout].
"un peu moins" : adv += [psneg=+].
"\?" : sent += [question=+].
"\?+" : punct += [question=+].



//----------------------------------------------------------------------------------------------------
// lexique de ponctuation pour considérer des suites de signes comme fin de phrase
"!+" : punct += [sent=+].
"\?+" : punct += [sent=+].
".+" : punct += [sent=+].



//----------------------------------------------------------------------------------------------------
// noms pour éviter la dépendance
ben :: ? = noun[noun=+, partic=+, lemme=ben, no-sents=+].
//bin :: ? = noun[noun=+, partic=+, lemme=ben, no-sents=+].
fète :: ? = noun[noun=+, fem=+, sg=+, lemme=fête, no-sents=+].
Okay :: ? = noun[noun=+, lemme=okay, no-sents=+].
vacs :: ? = noun[noun=+, fem=+, pl=+, lemme=vacance, no-sents=+].
