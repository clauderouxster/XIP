//*******************************************************************************************************************************************


//********************************************************************* Nsent ***************************************************************
// Nsent : noms qu'on peux construire avec les verbe support avoir, éprouver, ressentir
// (avoir + éprouver + ressentir) (du + de la + de l') (bonheur + colère + admiration )
		
		admiration : noun += [ Nsent= +, positive = +].
		anxiété : noun += [ Nsent= +, negative = +].
		angoisse : noun += [ Nsent= +, negative = +].
			
		bonheur : noun += [ Nsent= +, positive = +].
		
		chagrin : noun += [ Nsent= +, negative = +].
		claque  : noun += [ Nsent= +, negative = +].
		colère : noun += [ Nsent= +, negative = +].
		crainte : noun += [ Nsent = +, negative = +].
		curiosité : noun += [ Nsent = +, negative = +].
		

		dégoût : noun += [ Nsent = +, negative = +].
		douleur : noun += [ Nsent = +, negative = +].
		doute : noun += [ Nsent = +, negative = +].
		deuil : noun += [ Nsent = +, negative = +].
		
		effroi : noun += [ Nsent = +, negative = +].
		émotion : noun += [ Nsent= +, positive = +].
		enthousiasme : noun += [ Nsent: = +, positive = +].       
