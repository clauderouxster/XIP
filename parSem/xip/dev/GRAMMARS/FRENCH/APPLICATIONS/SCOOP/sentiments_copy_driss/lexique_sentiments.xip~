//******************************************************************** Incitation ***********************************************************
	//verb

// le film est à conseiller.

	connaitre : verb += [  incitation = +,  averb=+].
	conseiller : verb += [  incitation = +,  averb=+].

	déconseiller : verb += [  incitation = -,  averb= +].
	
	 essayer  : verb += [ appreciation= +, incitation = +,  averb= +].

	éviter :  verb += [ averb = +,  incitation = -  ].

	 faire : verb += [  incitation = +, averb= +].

	manquer : verb += [  incitation = -, averb= +].

	recommander : verb += [  incitation = +, averb = +].

	 visiter : verb += [ incitation = +,  averb = +].
	 voir : verb += [  incitation = +, averb = +].

