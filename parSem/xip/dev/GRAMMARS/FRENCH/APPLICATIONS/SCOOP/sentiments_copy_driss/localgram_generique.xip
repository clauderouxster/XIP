// localgram_generique.xip
// grammaire locale pour les mots multiples des produits
// créé: 16.6.2008 (Sigrid Maurel)
// modifié: 16.6.2008 (Sigrid Maurel)
// modifié: 07.4.2010 (Driss Sadoun)

Séquence:

// Beaucoup de, peu de
//1> ADV[quant : +] = pron[quant : +], prep[lemme : de].

// Beaucoup de gens, peu d'enfant
1> NP = ?[quant : +], prep, (adv;adj)*, noun[adj : ~].
1> NP = ?[quant : +], prep, noun[adj : +].

// noms de produit normalisés, p.e. {Guardian Heroes | guardian§heroes}
1> noun[produit_surf=+] @= | noun[lemme:\{] | noun; num, (noun; num)* | punct[lemme:\|] |.
1> noun[produit_norm=+] @= | punct[lemme:\|] | noun; num, (noun; num)* | noun[lemme:\}] |.

2> noun[produit=+] = noun[lemme:\{], noun[produit_surf:+], punct[lemme:\|], noun[produit_norm:+], noun[lemme:\}].

// après midi 
1> noun[lemme = après-midi, time : +, noun : +, no-sents : +] = noun[surface : aprem].
1> noun[lemme = après-midi, time : +, noun : +, no-sents : +] = noun[surface : aprém].
1> noun[lemme = après-midi, time : +, noun : +, no-sents : +] = noun[surface : aprèm].
1> noun[lemme = après-midi, time : +, noun : +, no-sents : +] = adv[surface : après], noun[lemme : midi].
1> noun[lemme = après-midi, time : +, noun : +, no-sents : +] = adv[surface : aprés], noun[lemme : midi].
1> noun[lemme = après-midi, time : +, noun : +, no-sents : +] = adv[surface : apres], noun[lemme : midi].

// s'agir
1> verb[lemme = s'agir, verb = +, no-sents = +] = pron[surface : s'], verb[surface : agit].
//avoir l'air
1> verb[lemme = "avoir l'air", verb = +, verbop = +, sadj1 = +, semble = +] = verb[lemme : avoir], pron[surface : l'], noun[lemme : air].

// mettre à jour
1>verb[lemme = "mettre à jour", verb = +] = verb[lemme : mettre], adv[lemme : "à jour"].
1> noun[noun = +, lemme = recto-verso] = noun[lemme : recto], (punct[lemme : -]), noun[lemme : verso].

1>NP[quant : +] = ADV[quant : + ], PP.