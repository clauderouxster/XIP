//==================================================================================
// le parc est pas reussi
// le parc est pas tres reussi

|FV{VERB#1,ADV*,ADV[psneg : +],ADV*,VERB}| 
	if (~NEGAT(#1))
	NEGAT(#1)


//==================================================================================

// je vois pas bien ce que tu dis 
// je vois vraiment pas bien ce que tu dis.

|SC{?*,FV{?*,VERB#1}}, ADV*, ADV[psneg : +, compar : ~],?[prep:~]|
		if (~NEGAT(#1) & ~NEGAT(#3))
	NEGAT(#1)
//==================================================================================

//==================================================================================
//le prix est pas bas.

|AP{ADV[psneg : +, compar : ~], ADV*, ADJ#1}|
		if (~NEGAT(#1))
	NEGAT(#1) // psneg = + pour éviter la double négation ex : il est moins beau

