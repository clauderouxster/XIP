//==================================================================================
// on remplace la négation des auxiliaires par celle du verbe.
// je ne suis pas venu. ==> NEGAT(venu)

if(^NEGAT(#1) & AUXIL(#2, #1) & ~NEGAT(#2)) NEGAT(#2).


//==================================================================================


// portée de la négation


//==================================================================================
// je ne suis pas sûr de venir. ==> SCOPE(venir) 

if(NEGAT(#1) & ADJMOD(#1, #2[psneg : ~]) ) SCOPE(#2).


//==================================================================================

//==================================================================================

//  je ne suis pas venu pour parler.  ==> NEGAT(parler)

if( NEGAT(#1) & (OBJ[ spred : ~](#1, #2[psneg : ~]) | VMOD(#1, #2[psneg : ~])) ) SCOPE(#1,#2).


//==================================================================================


//==================================================================================

// Ce n'est une belle voiture.  ==> NEGAT(Luc)

if(NEGAT(#1[lemme : être]) & OBJ[spred : +](#1, #2) & ~NEGAT(#2) ) NEGAT(#2).


