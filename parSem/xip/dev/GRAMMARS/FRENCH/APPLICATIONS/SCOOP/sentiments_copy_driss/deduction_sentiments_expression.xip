Déduction:

//----------------------------------------------------------------------------------------------------



//====================================================================================================
//====================================================================================================
// il fait beau. il fait bien de venir.
|SC{?*, FV{?*,#1[lemme : faire, last : +]}}, AP{adv*,#2[sents : +, !sentiment:!]}|
	SENTIMENT[appreciation = +](##EXPERIENCER, #2, #1, ##SPEAKER).

//====================================================================================================
//====================================================================================================



//====================================================================================================
//====================================================================================================
// ça me fait une belle jambe.


if(NMOD(#1[lemme : jambe],#2[lemme : beau])& 
	OBJ(#3[lemme : faire], #1) & ( OBJ(#3, #4[pron : +]) |  VMOD(#3, #4[pron : +]))
)
SENTIMENT[appreciation = +, negative = +](#4, #2, #1, ##SPEAKER).


//====================================================================================================
//====================================================================================================


//====================================================================================================
//====================================================================================================

//ça craint, tu crains

if(SUBJ(#1[lemme : craindre, ind : +], #2)) SENTIMENT[appreciation = +, negative = +, numRegle = 1](#2, #1, ##CAUSE, ##SPEAKER)

if(^SENTIMENT[numRegle : 1](#1[dem : +], #2, #7, #8)) SENTIMENT[numRegle : 1](##EXPERIENCER, #2, #1, #8)

if(^SENTIMENT[numRegle : 1](#1, #2, #7, #8) & ( OBJ(#2[last: +, verb: +], #3[quant : ~, ton : ~]) 
				   | VMOD(#2[last: +, verb: +], #3[quant : ~, adv : ~]))
)SENTIMENT(#1, #2, #3, #8)

//====================================================================================================
//====================================================================================================




//====================================================================================================
//====================================================================================================

// Max est tombé amoureux de cette voiture. 17/02/2010

if(ADJMOD(#1[lemme : amoureux],#2[adv : ~]) & SUBJ(#3[lemme : tomber],#4) & ~NEGAT(#3)
)
SENTIMENT[appreciation = +, positive = +](#4, #1, #2, ##SPEAKER).

if(ADJMOD(#1[lemme : amoureux],#2[adv : ~]) & SUBJ(#3[lemme : tomber],#4) & NEGAT(#3)
)
SENTIMENT[appreciation = +, negative = +](#4, #1, #2, ##SPEAKER).



//====================================================================================================
//====================================================================================================



//====================================================================================================
//====================================================================================================

// Chypre doit valoir le coup.

if ( OBJ(#1[val:+], #2[objval:+]) & SUBJ(#1,#3)
)
SENTIMENT[appreciation = +, positive = +](##EXPERIENCER, #1, #3, ##SPEAKER). 



// + VMOD  : VMOD(#1_vaut ,#8_visiter[verb:+, inf:+])
//il vaut le coup de visiter Paris.


if ( ^SENTIMENT[!sentiment:!, !typesent:!](#8, #1[val:+], #3, #10) & VMOD(#1,#4[verb:+, inf:+]) 
) 
SENTIMENT(#8, #1, #4, ##SPEAKER).


