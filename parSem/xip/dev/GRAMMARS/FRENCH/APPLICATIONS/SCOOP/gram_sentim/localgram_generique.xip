// bon à rien

2> noun[noun=+,lemme="bon à rien",negative=+,sents=+] = |det | noun[lemme:"bon",!traits:!], prep[lemme:"à"], ?[lemme:"rien"] .
3> adj[adj=+,lemme="bon à rien",negative=+,sents=+] =  adj[lemme:"bon",!traits:!], prep[lemme:"à"], ?[lemme:"rien"] .
