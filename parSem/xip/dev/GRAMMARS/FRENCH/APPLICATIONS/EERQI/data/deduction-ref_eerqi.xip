/############################## DEDUCTION   ################################################\

Déduction:


if ( ^$1(#1[kswref],#2[kswref]) )
   $1[ksdepref=+](#1,#2).

if ( ^$1[ksdep,ksdepref](#1,#2) )
   $1[ok=+](#1,#2).

if ( ^$1[ksdep,ksdepref:~](#1,#2) )
   $1[noise=+](#1,#2).

| #1[ksref] |
if ( ^SENT(#2) & ~SENT[ksref](#2) )
   SENT[ksref=+](#2).

if ( $1[ok](#1,#2) & ^SENT[ks](#3) )
   SENT[ksref=+,ok=+](#3).

if ( ^SENT[ksref:~,ks](#1) )
 SENT[noise=+](#1).

if ( ^$1[ksdep:~,ksdepref](#1,#2) )
 $1[silence=+](#1,#2).

if ( $1[silence](#1,#2) & ^SENT(#3) )
 SENT[ksref=+](#3).

if ( ^SENT[ks:~,ksref](#1) )
 SENT[silence=+](#1).

if ( ^SENT[ks:~,ksref](#1))
 SENT[ok=~](#1)

if ( ^SENT[ksref:~,ks](#1))
 SENT[ok=~](#1)

if ( ^SENT[ks,ksref](#1))
 SENT[ok=+,noise=~](#1)



