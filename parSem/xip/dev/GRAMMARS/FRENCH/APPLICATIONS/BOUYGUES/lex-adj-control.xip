vocabulaires:

// lexique pour certains adjectifs
// qui introduisent une infinitive
// dont l'objet profond esr le sujet
// de la phrase
// (dans les cas NON impersonnels)
// ex: le processus est difficile a observer
// DEEPOBJ(observer,processus)


affreux : adj += [raisedSO=+].
agréable: adj += [raisedSO=+].
amusant : adj += [raisedSO=+].
bon : adj += [raisedSO=+].
commode : adj += [raisedSO=+].
difficile : adj += [raisedSO=+].
dur : adj += [raisedSO=+].
facile : adj += [raisedSO=+].
important : adj += [raisedSO=+].
impossible : adj += [raisedSO=+].
intéressant : adj += [raisedSO=+].
utile : adj += [raisedSO=+].


// traits manquants


insensé : adj += [IMPERSO=+].
avisé : adj += [IMPERSO=+].