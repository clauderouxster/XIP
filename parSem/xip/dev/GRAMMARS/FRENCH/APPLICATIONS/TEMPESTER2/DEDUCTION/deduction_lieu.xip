	       VMOD[loc=+](#2,#3)

if (  ^VMOD[!traits:!](#2[vlocrefl],#3[region1]) & REFLEX(#2,#4))
	       VMOD[loc=+](#2,#3)

if (  ^VMOD[!traits:!](#2[vgorefl],#3[region1]) & REFLEX(#2,#4))
	       VMOD[loc=+](#2,#3)

if (  ^VMOD[!traits:!](#2[vlocrefl],#3[locpot]) & REFLEX(#2,#4))
	       VMOD[loc=+](#2,#3)

