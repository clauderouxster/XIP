define JC	J (%.) ([%-|% ]) C ;

####  Final transducer

regex 	[ email 	"+Symbol":0 "+Email":0   
	| email2  	"+Symbol":0 "+Email":0 
        | URL   	"+Symbol":0 "+URL":0
