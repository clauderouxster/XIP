# CREATED:      17-Jul-2007 (AS)
#
# ============================================================================
# USAGE:        xfst -l def-chars.xfst -l [ThisFile]
# ============================================================================

define CR	WS+ & $[NL];
define NoCR	WS+ & ~$[NL] ;

define BOUND	SEP | WS | EOT | BOT  ;
define CHAR	? - BOUND ;

read regex [
	[ SP .x. NoCR ]
|	[ [SP|NL] .x. CR ] 
];



