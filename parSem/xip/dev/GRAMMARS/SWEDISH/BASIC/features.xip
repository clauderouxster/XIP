Features:
[
	cat:{0},
		
// main categories
  
  poscat: [
 	adj:{+},			// adjective
 	adv:{+},			// adverb
	conj:{+},			// conjunction
	det:{+},			// determiner
	itj:{+},			// interjection
	noun:{+},			// noun or proper name
	num:{+},			// numeral
	poss:{+},			// possessive 
	prep:{+},			// preposition
	pron:{+},			// pronoun
	ptcl:{+},			// particle
	punct:{+},			// punctuation
	symbol:{+},			// special symbol (currency, character, ...)
	trunc:{+},			// truncated word part
	verb:{+}			// verb
	],
 

// -----------------------------------------------------------------------------
// MORPHOLOGY
// -----------------------------------------------------------------------------

morph: [
	act:{+},		// active [verb]
	card:{+},		// cardinal [number]
	common:{+},		// common (noun)
	comp:{+},		// comparative [adjective]
	coord:{+},		// coordinating [conjunction]
	cop:{+},		// copula
	dec:{+},		// decimal number
	def:{+},		// definitive [noun, adjective, determiner, ...]
	dig:{+},		// digital number
	gen:{+},		// genitive case [noun]
	imp:{+},		// imperative [verb]
	indef:{+},		// indefinitive [noun, adjective, determiner, ...]
	inf:{+},		// infinitive [verb]
	masc:{+},		// masculine gender
	neg:{+},		// negative (adverb)
	neut:{+},		// neuter gender
	nom:{+},		// nominative case
	obj:{+},		// objective case
	ord:{+},		// ordinal [number]
	past:{+},		// past tense
	percent:{+},		// number with percent sign
	pl:{+},			// plural
	pos:{+},		// poitive (basic) degree [adjectives]
	ppast:{+},		// past participle [adjectival use]
	ppres:{+},		// present participle [verb]
	pres:{+},		// present tense [verb]
	proper:{+},		// proper name
	prt1:{+},		// part 1 (of double conjunction)
	prt2:{+},		// part 2 (of double conjunction)
	recip:{+},		// reciprocal (pronoun)
	refl:{+},		// reflexive (pronoun)
	rel:{+},		// relative (pronoun)
	roman:{+}, 		// roman number
	sform:{+},		// s-form
	sg:{+},			// singular
	subj:{+},		// subject case*
	subord:{+},		// subordinating (conjunction)
	super:{+},		// superlative degree
	supin:{+},		// supinum [verb]
	utr:{+},		// common or utrum (masculine or feminine) gender
	wh:{+}			// interrogative or relative [pronoun, determiner]
	],

// punctuations
special: [
	apos:{+},		// apostrophe '
	colon:{+},		// colon :
	comma:{+},		// comma ,
	curr:{+},		// currency $ € £
	dash:{+},		// dash -
	email:{+},		// e-mail address
	final:{+},		// final SGML symbol
	hyphen:{+},		// hyphen -
	initial:{+},		// initials (person names)
	paren:{+},		// parenthesis ( ) [ ] { }
	phone:{+},		// phone number
	quote:{+},		// quote " " « »
	semicol:{+},		// semicolon ;
	sent :{+},		// sentence final . ! ? 
	sgml:{+},		// SGML tag
	slash:{+},		// slash, backslah / \  
	unit:{+},		// measure unit ° 
	url:{+}			// URL
	],

info: [
	guessed:{+},
	lex:{+},
	spec:{+},
	firstcap:{+},		// first character is uppercase
	allcap:{+}		// all characters are upper case
	],

// added for grammar:
gram: [
	aux:{+},
	modal:{+}
	],

syntax: [
	ap:{+},
	np:{+},
	pp:{+}
	],

// -----------------------------------------------------------------------------
// FEATURE GROUPS:
// -----------------------------------------------------------------------------
  case:		[ nom:{}, gen:{}, obj:{}, subj:{} ],
  gender:	[ masc:{}, utr:{}, neut:{} 	],
  number: 	[ sg:{}, pl:{} ]

  // to be continued !

]



