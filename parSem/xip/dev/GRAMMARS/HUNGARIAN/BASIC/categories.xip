POS:

/*****************************************
        BASIC CATEGORIES
*****************************************\


 top = [cat=0].      /acts as root to chunking trees\
 
 adj = [adj=+].
 adv = [adv=+].
 conj = [conj=+].
 det = [det=+].
 itj = [itj=+].
 noun = [noun=+].
 num = [num=+].
 postp = [postp=+].
 pron = [pron=+]. 
 punct = [punct=+].
 symb = [symb=+].
 trunc = [trunc=+].
 verb = [verb=+].


//****************************
//       Chunks and phrases
//*****************************

// to be defined

ap =  [ ap=+ ].			// adjectival phrase	"sehr schön geamaltes [Bild]"

np  = [ np=+ ].			// noun phrase (including determiner)

pp  = [ pp=+ ].	     		// prepositional phrase
