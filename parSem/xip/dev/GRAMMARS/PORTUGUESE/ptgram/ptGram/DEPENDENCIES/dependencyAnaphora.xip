   HEAD(#5,#1) &
   HEAD(#7,#2) &
   ~ACANDIDATE(#3,#5) &
   ~ACANDIDATE(#3,#7) &
   #3[gender]:#5[gender] &
   #3[gender]:#7[gender]
   )
  ACANDIDATE(#3,#5),ACANDIDATE(#3,#7)


//rule 2.2_pronPoss: Anaphor in NP, Antecedent in coordinated NPs
