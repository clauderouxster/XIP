read regex
 [ %. | %! | %? | %, | %( | %[ | %) | %] | %; | %: | %- | %_ | 
   %{ | %} |  %[ | %] |  %< | %> | %« | %» |
  %" | %' | %` | %~ | %= | %_ |
  %+ | %= | %^ | %/ | %¿ | %¡ | %\ | %| | %* | %# | %@ 
|  %&
 ]
 ;
 define Misc ;

# there is a bug if stopchar includes both \t and \n
define stopchar  %  | "\t" | "\n" ; 


read regex

 [
 [? - [Misc | stopchar ]  ]+ %+InvGen:0 %+InvPL:0 %+Guessed:0 %+Noun:0 %+NOUN%_INV:0 
 
 ] 
 ;





